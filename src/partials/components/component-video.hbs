<section class="video" id="video-host">
  <button type="button" class="video__btn">
    <span class="video__btn-text-wrapper">
      <span class="video__btn-text">видео о парке</span>
    </span>
  </button>

  <div class="video__modal-container">
    <div class="video__modal-wrapper">
      <video autoplay muted loop class="video__modal-video-wrapper">
        <source src="assets/mp4/video.mp4" type="video/mp4">
      </video>
    </div>

    <button type="button" class="video__close-btn">
      <svg width="24" height="24" aria-hidden="true" class="video__close-icon">
        <use xlink:href="#close"></use>
      </svg>
    </button>
  </div>
</section>
