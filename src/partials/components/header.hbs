<header class="header__container container" id="header-host">
  <div class="header__logo-wrapper">
    <img src="img/common/logo.png" alt="logo" class="header__logo" data-sizes="auto">
  </div>

  <div class="header__content-contacts-wrapper gl-lg-desk-hide">
    {{> header-contacts }}
  </div>

  <div class="header__navigate-menu-wrapper gl-desk-hide">
    {{> header-navigate-menu }}
  </div>

  <div class="header__content-navigate-btns gl-desk-hide">
    <button type="button" class="gl-transparent-btn header__navigate-btn">
      <span class="gl-btn-container">
        <span class="gl-btn-wrapper">
          <span class="gl-btn-content-item">Написать письмо</span>
          <span class="gl-btn-content-item">Написать письмо</span>
        </span>
      </span>
    </button>
    <button type="button" class="gl-main-btn header__navigate-btn">
      <span class="gl-btn-container">
        <span class="gl-btn-wrapper">
          <span class="gl-btn-content-item">Заказать праздник</span>
          <span class="gl-btn-content-item">Заказать праздник</span>
        </span>
      </span>
    </button>
  </div>

  <div class="header__mobile-block-wrapper gl-desk-show">
    <a href="tel:+78005555555" class="header__phone gl-font-calibri gl-small-mobile-hide">
      8 800 555-55-55
    </a>
    <button class="header__burger-wrapper">
      <span class="header__burger-content"></span>
    </button>
  </div>

  <div class="header__sidebar-container gl-desk-show">
    <div class="header__sidebar-wrapper">
      <div class="header__sidebar-header-wrapper">
        <img src="img/common/logo.png" alt="logo" class="header__sidebar-logo" data-sizes="auto">
        <button type="button" class="gl-close-btn-wrapper header__sidebar-close-btn-wrapper">
          <svg width="24" height="24" aria-hidden="true" class="gl-close-btn-icon">
            <use xlink:href="#close"></use>
          </svg>
        </button>
      </div>
      <div class="header__sidebar-navigate-menu">
        {{> header-navigate-menu }}
      </div>
      <div class="header__sidebar-contacts">
        {{> header-contacts }}
      </div>
    </div>
  </div>
</header>
